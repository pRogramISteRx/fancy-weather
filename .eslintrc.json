{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "mapboxgl": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prefer-destructuring": ["error", { "object": true, "array": false }],
    "import/prefer-default-export": "off",
    "prettier/prettier": ["error"],
    "linebreak-style": ["error", "windows"],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "always"
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  }
}
